@{
}
<h1>Ejemplo Mail</h1>
@if (ViewBag.Mensaje != null)
{
    <h2 class="text-success">@ViewBag.Mensaje</h2>
}
<form method="post" enctype="multipart/form-data">
    <label>Destinatario: </label>
    <input type="email" name="receptor" class="form-control-sm" /><br />
    <label>Asunto:</label>
    <input type="text" name="asunto" class="form-control-sm" /><br />
    <label>Mensaje: </label>
    <textarea name="mensaje" class="form-text" ></textarea><br />
    <label>Seleccione un archivo</label>
    <input type="file" name="fichero" class="form-control-file" />
    <button type="submit" class="btn btn-success my-1">Enviar</button>
</form>
