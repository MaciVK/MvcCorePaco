
<h1>Ejemplo Session</h1>
<h2 class="text-danger">@ViewBag.Mensaje</h2>

<ul class="list-group-horizontal">
    <li class="list-group-item">
        <a class="btn btn-primary" asp-action="EjemploSession" asp-controller="Home" asp-route-accion="mostrar">Mostrar Session</a>
    </li>
    <li class="list-group-item">
        <a class="btn btn-secondary" asp-action="EjemploSession" asp-controller="Home" asp-route-accion="almacenar">Almacenar Session</a>
    </li>
</ul>

<h2 class="text-primary"> Autor: @ViewBag.Autor</h2>
<h2 class="text-secondary">Hora de almacenado: @ViewBag.Hora</h2>