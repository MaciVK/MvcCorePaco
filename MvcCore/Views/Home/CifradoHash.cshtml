<h1>Cifrado Hash</h1>
<form method="post">
    <label>Contenido a cifrar</label>
    <input type="text" name="contenido" required class="form-control-sm" /><br />
    <label>Resultado:</label>
    <textarea rows="5" class="form-control" name="resultado" readonly>@ViewBag.Resultado</textarea><br />
    <button type="submit" class="btn btn-success" name="accion" value="cifrar">Cifrar</button>
    <button type="submit" class="btn btn-warning" name="accion" value="comparar">Comparar contenido</button>
</form>
@Html.Raw(ViewBag.Mensaje)